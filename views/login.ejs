<%- include('partials/header') %>

  <section class="navbar-bg">
    <nav class="navbar navbar-expand-lg navbar-light">
      <div class="container">
        <a class="navbar-brand" href="/"><img alt="" width="32" height="32" src="/images/logo7.png"
            class="brand-logo hidden-xs-down" />
          <strong>audify</strong>
        </a>

        <a href="/" class="ml-auto home nav-item nav-link">Home</a>
      </div>
    </nav>
  </section>

  <div class="container Login">
    <h1>Login</h1>

    <div class="row">
      <div class="col-12 col-lg-6 text-center mt-3">
        <div class="card">
          <div class="card-body">

            <!-- Makes POST request to /login route -->
            <form action="/login" method="POST">
              <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" name="email">
              </div>
              <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" name="password">
              </div>
              <button type="submit" class="btn btn-dark mt-1">Login</button>
            </form>

          </div>
        </div>
      </div>

      <div class="col-12 col-lg-6 justify-content-center mt-3">
        <div class="card mb-2">
          <div class="card-body">
            <a class="btn btn-block btn-social btn-google" href="/auth/google" role="button">
              <i class="fab fa-google"></i>
              Sign In with Google
            </a>
          </div>
        </div>
        <div class="card mb-2">
          <div class="card-body">
            <a class="btn btn-block btn-social btn-facebook" href="/auth/facebook" role="button">
              <i class="fab fa-facebook"></i>
              Sign In with Facebook
            </a>
          </div>
        </div>

        <div class="card">
          <div class="card-body">
            <a class="btn btn-block btn-social btn-microsoft" href="/auth/microsoft" role="button">
              <i class="fab fa-microsoft"></i>
              Sign In with Microsoft
            </a>
          </div>
        </div>

      </div>


    </div>
  </div>

  <%- include('partials/footer') %>